<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >


        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck">

            <!-- Ảnh bìa bên trái -->
            <ImageView
                android:id="@+id/ivICon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mainlogo" />


            <!-- Tên bài hát và thông tin khác -->

            <!-- Icon Play bên phải -->

            <LinearLayout
                android:id="@+id/lnContainer"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Tên bài hát -->
                <TextView
                    android:id="@+id/edt_tenPlayList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên PlayList"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Nghệ sĩ và thời gian -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edt_sobaihat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Số Bài hát"
                        android:layout_weight="1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/edt_ThoiLuong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Thời Lượng"
                        android:layout_weight="1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/prPlaylist"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_more_vert_24"
                app:tint="@android:color/black" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>